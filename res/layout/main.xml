<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="45dip"
    android:background="@color/main_application_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="25dip"
        android:text="@string/main_title"
        android:textColor="@color/main_label_color"
        android:textSize="60.0sp" />

    <Button
        android:id="@+id/resume_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/resume_label" />

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_game_label" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_label" />

    <Button
        android:id="@+id/scores_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/scores_label" />

    <Button
        android:id="@+id/instructions_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions_label" />

</LinearLayout>